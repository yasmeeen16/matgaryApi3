<body>
<%include ../layout/sidebar.ejs%>
<div class="main-panel">
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">

                                <div class="content table-responsive table-full-width">
                                    <table class="table">
                                        <thead>
                                                <th>القسم</th>
                                                <th style="width: 10%">Action</th>
                                        </thead>
                                        <tbody>
                                            <%categories.forEach(function(category){ %>
                                            <tr>

                                                <td>

                                                  <div class="product">
                                                        <div class="product-img"><img  src="/imgs/<%=category.img%>"></div>
                                                        <div class="contain" style="display: flex;flex-direction: column">

                                                             <div class="product-data">
                                                                <a href="/webadmin/allsubCategory/<%= category._id %>"><%= category.Ename  %></a>


                                                            </div>
                                                            <div class="product-data">
                                                                <a href="#"><%= category.Aname  %> </a>


                                                            </div>
                                                        </div>

                                                    </div>

                                               </td>

                                                 <td> <a href="/webadmin/editCategory/<%=category. _id%>">تعديل </a> </td>
                                                 <td> <a href="/webadmin/deleteCategory/<%=category. _id%>">حذف </a> </td>
                                                <td> <a href="/webadmin/addSubCategorytoCat/<%=category. _id%>"> اضافه قسم فرعى</a> </td>




                                            </tr>

                                            <%})%>

                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>



        </div>
    </div>
    <script>
        var x = document.getElementsByClassName('dot');
        for (let a = 0; a < x.length; a++) {
            document.getElementsByClassName('dot')[a].addEventListener('click', function show() {
                document.getElementsByClassName('little')[a].classList.toggle('little-v');
            });
        }

