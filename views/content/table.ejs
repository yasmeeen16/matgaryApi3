<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/assets/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title> Products </title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/ssets/css/animate.min.css" rel="stylesheet" />
    <link href="/assets/css/dashboard.css?v=1.4.0" rel="stylesheet" />
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <style >
    img {
          border: 1px solid #ddd;
          border-radius: 4px;
          padding: 5px;
          width: 150px;
          height: 150px;
          border-radius: 50%;
        }
    </style>
</head>

<body>

    <!-- start popup modal -->
<%include ../layout/sidebar.ejs%>
<div class="main-panel">
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">

                                <div class="content table-responsive table-full-width">
                                    <table class="table">
                                        <thead>
                                            <th>المنتج</th>
                                            <th>الوصف</th>
                                            <th>رقم الموديل</th>

                                        </thead>
                                        <tbody>
                                            <%products.forEach(function(product){ %>
                                            <tr>
                                                <td>
                                                    <div class="product">
                                                        <div class="product-img"><img src="/imgs/<%=product.imgs[0]%>"> </div>
                                                        <div class="contain" style="display: flex;flex-direction: column">
                                                            <div class="product-data">
                                                                <a href="#"><%=product.Ename%></a>

                                                                <div>
                                                                    <span><%=product.brandEnglish%></span> &nbsp;
                                                                    <i class="fa fa-chevron-right"></i>
                                                                    <span class="visble"><%= product.price1 %> LE</span>
                                                                    &nbsp; | &nbsp;

                                                                    <span> <%=product.price2%>  LE</span>
                                                                </div>

                                                            </div>
                                                            <div class="product-data">

                                                                <a href="#"><%=product.Aname%></a>

                                                                <div>
                                                                    <span><%=product.brandArabic%></span> &nbsp;
                                                                    <i class="fa fa-chevron-right"></i>
                                                                    <span class="visble">جنيه <%= product.price1 %></span>
                                                                    &nbsp; | &nbsp;
                                                                    <span> جنية <%=product.price2%></span>
                                                                </div>

                                                            </div>
                                                        </div>

                                                    </div>
                                                </td>

                                                <td>
                                                    <div>
                                                        <p style="margin-bottom: 20px;"><%=product.discriptionEnglish%></p>
                                                        <p style="margin-bottom: 20px;"><%=product.discriptionArabic%></p>
                                                    </div>

                                                </td>
                                                <td>
                                                    <div>
                                                        <p style="padding: 0px 20px;font-weight: 600;font-size:18px;margin-bottom: 50px;"><%=product.modelnumber%></p>

                                                    </div>

                                                </td>

                                                <td> <a><i class="fa fa-ellipsis-h fa-2x dot"></i></a>
                                                    <ul class="little text-right">
                                                        <li><a href="view.html">عرض</a></li>
                                                        <li><a href="edit.html">تعديل</a></li>
                                                        <li><a class="del">حذف</a></li>

                                                    </ul>
                                                </td>


                                            </tr>


                                            <%});%>
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>

            <footer class="footer">
                <div class="container-fluid">
                    <nav class="pull-left">
                        <ul>
                            <li>
                                <a href="#">
                                    <i class="fa fa-facebook fa-2x"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-twitter-square fa-2x"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Portfolio
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Blog
                                </a>
                            </li>
                        </ul>
                    </nav>

                </div>
            </footer>


        </div>
    </div>
    <script>
        var x = document.getElementsByClassName('dot');
        for (let a = 0; a < x.length; a++) {
            document.getElementsByClassName('dot')[a].addEventListener('click', function show() {
                document.getElementsByClassName('little')[a].classList.toggle('little-v');
            });
        }

    </script>
    <script>
        document.getElementsByClassName('ok')[0].addEventListener('click', function show() {
            document.getElementsByClassName('bg-modal')[0].classList.add('hidden');
        });
        document.getElementsByClassName('close')[0].addEventListener('click', function show() {
            document.getElementsByClassName('bg-modal')[0].classList.add('hidden');
        });
        var x = document.getElementsByClassName('del');
        for (let a = 0; a < x.length; a++) {
            document.getElementsByClassName('del')[a].addEventListener('click', function show() {
                document.getElementsByClassName('bg-modal')[0].classList.remove('hidden');
            });
        }

    </script>

</body>


<script src="/assets/js/jquery.3.2.1.min.js" type="text/javascript"></script>
<script src="/assets/js/bootstrap.min.js" type="text/javascript"></script>
<script src="/assets/js/light-bootstrap-dashboard.js?v=1.4.0"></script>


</html>
